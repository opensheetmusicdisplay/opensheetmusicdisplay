{
  "compilerOptions": {
    "target": "es6",
    "module": "esNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "build/dist",
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "build"
  ]
}
